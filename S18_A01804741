temp= [20,30,21,26,27,31,36]
print( sum(temp))

temp = [20,30,21,26,27,31,36]
media= sum (temp) / len(temp)
print (media)

for i in temp:
    if i > media:
        print(i, "sobre el promedio")
    else:
        print(i, "bajo el promedio")

